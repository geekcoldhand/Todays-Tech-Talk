<!-- Loop over each object in the post array -->
<div class="p-3s">
  <h2>
    Post
  </h2>

  {{#each posts}}
    <div class="row mb-4 project">
      <div class="col-md-5">
        <h3>

          <a href="/post/{{this.id}}">{{this.title}}</a>
        </h3>
        <p>

          <!-- Pass needed_funding value to the helper function -->
          {{!-- <span class="">{{format_date post.date_created}}</span> --}}

        </p>
        <p>Created by {{this.userId}} on {{format_date this.createdAt}}</p>
      </div>
      <div class="col-md-7">
        <p>
          {{this.content}}
        </p>
      </div>
    </div>
  {{/each}}

</div>